<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="shopCartViewModel"
            type="com.example.foodapp.presentation.cart.ShoppingCartViewModel" />

        <variable
            name="shoppingCartAdapter"
            type="com.example.foodapp.presentation.cart.ShoppingCartAdapter" />

        <variable
            name="cart"
            type="com.example.domain.model.Cart" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location_2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="@string/location_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="14sp"
                        android:text="@string/date_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:layout_gravity="center"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/avatar"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:adapter="@{shoppingCartAdapter}"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:onClick="@{()->shopCartViewModel.pay()}"
            android:layout_marginBottom="20dp"
            android:id="@+id/btnPay"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_btn"
            android:text='@{String.format("Оплатить %s ₽", String.valueOf(cart.summ))}'
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>
</layout>
